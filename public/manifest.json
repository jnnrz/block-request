{
  "manifest_version": 2,
  "name": "block-request",
  "description": "",
  "author": "Johann Perozo",
  "version": "1.0.0",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "unlimitedStorage",
    "webRequest",
    "webRequestBlocking",
    "*://*/*",
    "http://*/",
    "https://*/"
  ]
}
