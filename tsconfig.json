{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@popup/*": ["src/popup/*"],
    },
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "dist/js",
    "strict": false,
    "sourceMap": true,
    "jsx": "react",
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  }
}
